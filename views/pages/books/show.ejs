<!DOCTYPE html>
<html>
  
<%- include('../../layout/head') %>

<body>
  <%- include('../../layout/header') %>
  <main id="book-details">
    <ul class="add-form">
      <li>
        <%- include('detail', {book: bookDetails}) %>
        <form action="/delete-book/<%= bookDetails.id %>">
          <button type="submit">Delete Book</button>
        </form>

        <button type="button">Update Details</button>
        
        <form action="/update-book/<%= bookDetails.id %>" method="post" class="hidden">
          <input type="text" name="title" value="<%= bookDetails.title %>" />
          <input type="text" name="author" value="<%= bookDetails.author %>" />
          <input type="text" name="isbn" value="<%= bookDetails.isbn %>" />
          <input type="textarea" name="description" value="<%= bookDetails.description %>" />
          <input type="text" name="image_url" value="<%= bookDetails.image_url %>" />
          <select name="bookshelf">
            <% shelfList.forEach((shelf) => { %>
              <option value="<%= shelf.bookshelf %>"><%= shelf.bookshelf %></option>
              <% }) %>
            </select>
            <button type="button">Hide Form</button>
            <button type="submit">Submit Updates</button>
          </form>
        </li>
      </ul>
    </main>
    <script src="https://code.jquery.com/jquery-3.4.0.min.js"
    integrity="sha256-BJeo0qm959uMBGb65z40ejJYGSgR7REI4+CW1fNKwOg="
    crossorigin="anonymous"></script>
  <script src="/js/app.js"></script>
  </body>
</html>